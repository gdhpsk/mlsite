{
  "exclude": [
    "./server/adapter.ts"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "skipLibCheck": true,
    "lib": ["ES2015"],
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "../dist/server/",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}